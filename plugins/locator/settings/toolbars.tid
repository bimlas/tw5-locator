tags:
title: $:/plugins/bimlas/locator/settings/toolbars
type: text/vnd.tiddlywiki

<$vars
  tv-config-toolbar-icons="yes"
  tv-config-toolbar-text="yes"
>

! `locator-view` toolbar

<$vars config-base="$:/config/bimlas/locator/toolbars/view/">
  <$macrocall
    $name="list-tagged-draggable"
    tag="$:/tags/bimlas/locator/view-toolbar"
    itemTemplate="$:/core/ui/ControlPanel/Toolbars/ItemTemplate"
  />
</$vars>

! `locator-search` and `locator-fields` toolbar

<$vars config-base="$:/config/bimlas/locator/toolbars/search/">
  <$macrocall
    $name="list-tagged-draggable"
    tag="$:/tags/bimlas/locator/search-toolbar"
    itemTemplate="$:/core/ui/ControlPanel/Toolbars/ItemTemplate"
  />
</$vars>

</$vars>